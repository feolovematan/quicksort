#include <iostream>
#include <cstdlib>
#include <cmath>
using namespace std;

class node 
{
public:
int a; 
node* pred; 
};

class stack 
{
private:
node* verhniy;
public:
stack()
{
verhniy = NULL;
}
void push(int n);
void pop();
};

void stack::push(int n)
{
node* temp = new node;
temp->a = n;
temp->pred = verhniy;
verhniy = temp;
}

void stack::pop()
{
node* temp = new node;
cout<<verhniy->a;
temp = verhniy->pred;
delete verhniy;
verhniy = temp;
}

void main()
{
int end=0;
char ch;
